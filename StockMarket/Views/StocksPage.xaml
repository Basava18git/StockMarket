<UserControl x:Class="StockMarket.Views.StocksPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StockMarket.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="AliceBlue">
    <Grid>
        <Button Width="200" Height="100" Content="GetCashFlow" Margin="-400,0,0,0" Click="Button_Click_CashFlow"/>
        <Button Width="200" Height="100" Content="GetStockPrice" Margin="400,0,0,0" Click="Button_Click_StockPrice"/>
        <Label x:Name="StockName"  Width="200" Height="50" Margin="0,-300,0,0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <ContentControl x:Name="mainContent"/>
    </Grid>
</UserControl>
