<UserControl x:Class="StockMarket.Views.CashFlowUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StockMarket.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition Height="2*"/> 
        </Grid.RowDefinitions> 
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        
        <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Vertical">
            <TextBox Background="WhiteSmoke" BorderThickness="2" Name="NetIncome" Width="Auto" Height="190" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="20"/>
            <TextBox Background="WhiteSmoke" BorderThickness="2" Name="Reporeted_Cuurency" Width="Auto" Height="190" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="20"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Vertical">
            <Label Background="LightSkyBlue" BorderThickness="1" Content="Cashflow" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="20" Width="Auto" Height="190"/>
            <Label Background="LightSkyBlue" BorderThickness="1" Content="Reported Currency" Width="Auto" Height="190" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="20"/>
        </StackPanel>
        <Label Grid.Row="0" Background="LightSkyBlue"  BorderThickness="1" Grid.Column="0" Width="Auto" Height="Auto"  Content="Fiscal_year" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="20"/>
        <TextBox Grid.Row="0" Background="WhiteSmoke"  BorderThickness="2" Grid.Column="1" Name="Fiscal_year" Width="Auto" Height="Auto" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="20"/>


    </Grid>
</UserControl>
